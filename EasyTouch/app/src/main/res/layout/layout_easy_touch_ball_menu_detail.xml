<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="200dp"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/shape_react_corners_top_menu_bg"
        android:id="@id/container_ball_menu_detail_voice"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorWhite"
                android:text="静音"
                android:layout_alignTop="@id/switch_mode"
                android:layout_alignBottom="@id/switch_mode"
                android:id="@id/tv_audio_mode"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/switch_mode"
                android:src="@drawable/ic_notifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Switch
                android:paddingEnd="5dp"
                android:layout_centerVertical="true"
                android:id="@id/switch_mode"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@id/iv_audio_system"
                android:src="@drawable/ic_notifications"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <SeekBar
                android:layout_toRightOf="@id/iv_audio_system"
                android:id="@id/sb_system_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@id/iv_audio_media"
                android:src="@drawable/ic_media"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <SeekBar
                android:layout_toRightOf="@id/iv_audio_media"
                android:id="@id/sb_media_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@id/iv_audio_alarm"
                android:src="@drawable/ic_alarm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <SeekBar
                android:layout_toRightOf="@id/iv_audio_alarm"
                android:id="@id/sb_alarm_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/shape_react_corners_top_menu_bg"
        android:id="@id/container_ball_menu_detail_pay"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@id/iv_scan_alipay"
                android:layout_gravity="center"
                android:src="@drawable/vector_drawable_scan_alipay"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp" />

            <ImageView
                android:id="@id/iv_pay_alipay"
                android:layout_gravity="center"
                android:src="@drawable/vector_drawable_pay_alipay"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@id/iv_scan_weixin"
                android:layout_gravity="center"
                android:src="@drawable/vector_drawable_scan_weixin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp" />

            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@id/containerMenuDetailBack"
        android:layout_marginStart="200dp"
        android:layout_width="20dp"
        android:layout_height="200dp">
        <ImageView
            android:background="@drawable/shape_react_corners_top_bottom"
            android:src="@drawable/ic_arrow_left"
            android:layout_centerVertical="true"
            android:id="@id/iv_menu_detail_back"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </RelativeLayout>


</RelativeLayout>