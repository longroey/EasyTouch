<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/colorGrayLight"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.skkk.easytouch.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:textSize="30sp"
        android:text="功能权限"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        app:cardElevation="1.5dp"
        app:cardCornerRadius="5dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.skkk.easytouch.View.SettingItemView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@id/settings_item_float"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="悬浮窗权限"
                app:value="未打开"/>

            <com.skkk.easytouch.View.SettingItemView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@id/settings_item_assist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="辅助功能"
                app:value="未打开"/>

            <com.skkk.easytouch.View.SettingItemView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:id="@id/settings_item_lock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="锁屏功能"
                app:value="未开启"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:textSize="30sp"
        android:text="自定义"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        app:cardElevation="1.5dp"
        app:cardCornerRadius="5dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.skkk.easytouch.View.SettingItemView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@id/settings_item_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="悬浮条外观"
                app:value="15*240"/>

            <com.skkk.easytouch.View.SettingItemView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@id/settings_item_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="悬浮球外观"
                app:value="15*240"/>

            <com.skkk.easytouch.View.SettingItemView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@id/settings_item_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="一级菜单"
                app:value="方块"/>

            <com.skkk.easytouch.View.SettingItemView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@id/settings_item_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="二级菜单"
                app:value="方块"/>

            <com.skkk.easytouch.View.SettingItemView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:id="@id/settings_item_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="三级菜单"
                app:value="方块"/>


            </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_marginTop="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:textSize="25sp"
        android:gravity="center"
        android:text="悬浮条"
        android:padding="10dp"
        android:id="@id/btn_touch_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:foreground="?attr/selectableItemBackground"
        android:textSize="25sp"
        android:gravity="center"
        android:text="悬浮球"
        android:padding="10dp"
        android:id="@id/btn_touch_ball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
