<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/container_menu_ball"
        android:layout_width="200dp"
        android:layout_height="300dp">

        <ImageView
            android:src="@drawable/vector_drawable_trun_pos"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@id/iv_menu_ball_0"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageView
            android:src="@drawable/vector_ball_menu_voice"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@id/iv_menu_ball_1"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageView
            android:src="@drawable/vector_ball_menu_apps"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@id/iv_menu_ball_2"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageView
            android:src="@drawable/vector_ball_menu_pay"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@id/iv_menu_ball_3"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageView
            android:src="@drawable/vector_drawable_screen_lock"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@id/iv_menu_ball_4"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </RelativeLayout>



</RelativeLayout>